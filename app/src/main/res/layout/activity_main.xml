<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout style="@style/screenLayout">

        <TextView
            android:id="@+id/screen"
            style="@style/screenText" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e28743">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:backgroundTint="#e28743">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b7"
                    style="@style/numBtn"
                    android:text="7" />

                <Button
                    android:id="@+id/b4"
                    style="@style/numBtn"
                    android:text="4" />

                <Button
                    android:id="@+id/b1"
                    style="@style/numBtn"
                    android:text="1" />

                <Button
                    android:id="@+id/dot"
                    style="@style/numBtn"
                    android:text="." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b8"
                    style="@style/numBtn"
                    android:text="8" />

                <Button
                    android:id="@+id/b5"
                    style="@style/numBtn"
                    android:text="5" />

                <Button
                    android:id="@+id/b2"
                    style="@style/numBtn"
                    android:text="2" />

                <Button
                    android:id="@+id/b0"
                    style="@style/numBtn"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/numBtnCol">

                <Button
                    android:id="@+id/b9"
                    style="@style/numBtn"
                    android:text="9" />

                <Button
                    android:id="@+id/b6"
                    style="@style/numBtn"
                    android:text="6" />

                <Button
                    android:id="@+id/b3"
                    style="@style/numBtn"
                    android:text="3" />

                <Button
                    android:id="@+id/equals"
                    style="@style/numBtn"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/numBtnCol">

            <Button
                android:id="@+id/del"
                style="@style/opBtn"
                android:text="C" />

            <Button
                android:id="@+id/divide"
                style="@style/opBtn"
                android:text="รท"
                android:textSize="50sp" />

            <Button
                android:id="@+id/multiply"
                style="@style/opBtn"
                android:text="x"
                android:textSize="35sp" />

            <Button
                android:id="@+id/substract"
                style="@style/opBtn"
                android:text="-"
                android:textSize="70sp" />

            <Button
                android:id="@+id/add"
                style="@style/opBtn"
                android:text="+"
                android:textSize="50sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>